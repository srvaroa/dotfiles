# vim-like navigation
bind-key O open-in-browser-and-mark-read
bind-key h left
bind-key j down
bind-key k up
bind-key l right 
bind-key m toggle-show-read-feeds

auto-reload yes
browser ~/.newsbeuter/browse.sh
confirm-exit yes
goto-next-feed no
max-items 500
notify-screen yes
notify-xterm yes
prepopulate-query-feeds yes
refresh-on-startup no
refresh-on-startup no
reload-only-visible-feeds yes
reload-only-visible-feeds yes
reload-time 30
show-read-articles no
show-read-feeds no
show-read-feeds no
suppress-first-reload yes

# PODCASTS
download-path "~/Downloads/podbeuter/%n"
max-downloads 1

# VISUAL
text-width 72
article-sort-order date-desc
feedlist-format "%S%n %11u %t"
articlelist-format "%D %f %?T?;%-17T; ?%t"
datetime-format %y-%m-%d

color listnormal color244 black
color listfocus white color235
color info color136 color235
color background color244 black
color article color244 black
